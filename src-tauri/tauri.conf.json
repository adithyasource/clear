{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "clear",
    "version": "0.0.15"
  },

  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "scope": [
          "https://www.steamgriddb.com/api/v2*",
          "https://api.steampowered.com/ISteamApps/GetAppList/v2/*"
        ]
      },
      "notification": {
        "all": false
      },
      "all": true,
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "copyFile": true,
        "exists": true,
        "createDir": true,
        "scope": ["$APPDATA/**"]
      },
      "dialog": {
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.adithya.clear",
      "icon": ["icons/128x128.png", "icons/icon.ico"]
    },
    "security": {
      "csp": ""
    },

    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "clear",
        "width": 1220,
        "height": 760,
        "fileDropEnabled": false,
        "decorations": false,
        "minHeight": 390,
        "minWidth": 640
      }
    ]
  }
}
