{
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "beforeBundleCommand": ".\\scripts\\beforeBundle.bat",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "clear",
    "version": "1.1.0"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "copyFile": true,
        "exists": true,
        "createDir": true,
        "scope": ["$APPDATA/**"]
      },
      "dialog": {
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis", "msi"],
      "identifier": "com.adithya.clear",
      "icon": ["icons/128x128.png", "icons/icon.ico"]
    },
    "windows": [
      {
        "title": "clear",
        "width": 1220,
        "height": 760,
        "fileDropEnabled": false,
        "minHeight": 390,
        "minWidth": 640,
        "theme": "Dark"
      }
    ]
  }
}
