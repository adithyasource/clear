{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "beforeBundleCommand": ".\\before-build.bat",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "clear",
    "version": "0.18.0"
  },

  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "scope": ["https://www.steamgriddb.com/api/v2*"]
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "close": true,
        "minimize": true,
        "maximize": true,
        "startDragging": true,
        "unmaximize": true,
        "setDecorations": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "copyFile": true,
        "exists": true,
        "createDir": true,
        "scope": ["$APPDATA/**"]
      },
      "dialog": {
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "nsis",
      "identifier": "com.adithya.clear",
      "icon": ["icons/128x128.png", "icons/icon.ico"]
    },

    "windows": [
      {
        "title": "clear",
        "width": 1220,
        "height": 760,
        "decorations": false,
        "fileDropEnabled": false,
        "minHeight": 390,
        "minWidth": 640
      }
    ]
  }
}
